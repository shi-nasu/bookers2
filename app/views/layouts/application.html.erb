<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark"> 
      <div class="container">
        <p><span><%= link_to "Bookers", root_path, class: "nav-link text-light" %></span></p>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li>
        <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
        <li class="fas fa-home"></li>Home
        <% end %>
      </li>
      <li>
        <%= link_to users_path, class: "nav-link text-light" do %>
        <li class="fas fa-users"></li>Users
        <% end %>
      </li>
      <li>
        <%= link_to books_path, class: "nav-link text-light" do %>
        <li class="fas fa-book-open"></li>Books
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
        <li class="fas fa-sign-out-alt"></li>Log out
        <% end %>
      </li>
      <% else %>
      <li>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
      </ul>
      </div>
    </div>
    </nav>
  </header>
    <%= yield %>
  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
  </body>
</html>
