<main>
  <p id="notice"></p>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h1>Editing Book</h1>
            <%= form_with model: @book do |f| %>
              <div class="form-group">
                <label>Title</label>
                  <%= f.text_field :title %>
              </div>

              <div class="form-group">
                <label>Opinion</label>
                  <%= f.text_field :body %>
              </div>

              <div class="form-group">
                <label>
                  <%= f.submit 'Update Book' %>
                </label>
            <% end %>
              </div>

              <td>
                <%= link_to "Show", book_path(@book.id) %>
              </td>
              <td>|</td>
              <td>
                <%= link_to "Back", books_path %>
              </td>
        </div>
      </div>
    </div>
</main>