<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= image_tag @user.get_profile_image(100,100), size: "100x100" %>
            </tr>
            <tr>
	            <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
              <th><%= @user.introduction %></th>
	          </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
            <%= form_with model: @newbook do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <input class="form-control book_title" type="text" name="book[title]" id="book_title">
            </div>

            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
            </div>

            <div class="form-group">
              <%= f.submit class: 'btn btn-success' %>
            <% end %>
            </div>

      </div>
      <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
                <table class="table">
  		            <tbody>
  		              <tr>
                      <td>
                        <%= image_tag @user.get_profile_image(100,100), size: "100x100" %>
                        <br>
                        <%= link_to @user.name, user_path(@user.id) %>
                      </td>
                      <td>
                        <%= link_to @book.title, book_path(@book.id) %>
                      </td>
                      <td>
                        <%= @book.body %>
                      </td>
                      <td>
                        <%= link_to edit_book_path(@book.id) do %>
                          <div class="btn btn-success">Edit</div>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                         <div class="btn btn-danger">Destroy</div>
                        <% end %>
                      </td>
                      </div>
                    </tr>
                  </tbody>
                </table>
            </div>
    </div>
  </div>